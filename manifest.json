{
    "name": "VKU Notifications",
    "description": "VKU Notifications",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "js/background.js",
        "type": "module"
    },
    "permissions": [
        "storage",
        "notifications",
        "alarms",
        "tabs"
    ],
    "host_permissions": [
        "https://daotao.vku.udn.vn/*",
        "https://cs.vku.udn.vn/*",
        "https://de.vku.udn.vn/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "/images/vku-bg.png"
    },
    "icons": {
        "16": "/images/vku-16.png",
        "32": "/images/vku-32.png",
        "48": "/images/vku-48.png",
        "64": "/images/vku-64.png",
        "96": "/images/vku-96.png",
        "128": "/images/vku-128.png"
    }
}